import pandas as pd

# Sample data
data = {
    'Name': ['Alice', 'Bob', 'Alice', 'Charlie', 'Bob', 'Alice', 'Charlie'],
    'Amount': [100, -50, 200, -30, -150, -300, 60]
}

# Create DataFrame
df = pd.DataFrame(data)

# Add a column to indicate the sign of the amounts
df['Sign'] = df['Amount'].apply(lambda x: 1 if x >= 0 else -1)

# Check if all signs are the same for each name
same_sign = df.groupby('Name')['Sign'].transform(lambda x: x.min() == x.max())

# Filter the DataFrame to keep only rows with the same sign
df_filtered = df[same_sign]

# Show the filtered DataFrame
print(df_filtered)

